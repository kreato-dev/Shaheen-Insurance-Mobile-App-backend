      "name": "Admin Auth",
      "item": [
        {
          "name": "Login (Admin)",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "url": "{{baseUrl}}/api/admin/auth/login",
            "body": {
              "mode": "raw",
              "raw": "{\n  \"email\": \"admin@shaheen.com\",\n  \"password\": \"Admin@123\"\n}"
            }
          },
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "const res = pm.response.json();",
                  "if (res.accessToken) pm.collectionVariables.set('adminToken', res.accessToken);"
                ]
              }
            }
          ]
        },
        {
          "name": "Me (Admin)",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{adminToken}}"
              }
            ],
            "url": "{{baseUrl}}/api/admin/auth/me"
          }
