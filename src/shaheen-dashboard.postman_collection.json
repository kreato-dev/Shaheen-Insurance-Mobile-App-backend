    {
      "name": "Admin Proposals (Phase 2)",
      "item": [
        {
          "name": "Motor Detail (Docs + Images)",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{adminToken}}"
              }
            ],
            "url": "{{baseUrl}}/api/admin/proposals/motor/{{motorProposalId}}"
          },
          "description": "Returns motor proposal details with motor_documents and motor_vehicle_images, plus *_url fields."
        },
        {
          "name": "Travel Detail (by subtype) + Docs",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{adminToken}}"
              }
            ],
            "url": "{{baseUrl}}/api/admin/proposals/travel/{{travelSubtype}}/{{travelProposalId}}"
          },
          "description": "Returns travel proposal details with destinations and family members (where applicable), plus lifecycle/review fields."
        },
        {
          "name": "Review Motor - Approve",
          "request": {
            "method": "PATCH",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              },
              {
                "key": "Authorization",
                "value": "Bearer {{adminToken}}"
              }
            ],
            "url": "{{baseUrl}}/api/admin/proposals/motor/{{motorProposalId}}/review",
            "body": {
              "mode": "raw",
              "raw": "{\n  \"action\": \"approve\"\n}"
            }
          }
        },
        {
          "name": "Review Motor - Reupload Required",
          "request": {
            "method": "PATCH",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              },
              {
                "key": "Authorization",
                "value": "Bearer {{adminToken}}"
              }
            ],
            "url": "{{baseUrl}}/api/admin/proposals/motor/{{motorProposalId}}/review",
            "body": {
              "mode": "raw",
              "raw": "{\n  \"action\": \"reupload_required\",\n  \"reupload_notes\": \"CNIC images are blurry. Upload clear front/back.\",\n  \"required_docs\": [\n    { \"doc_type\": \"CNIC\", \"side\": \"front\" },\n    { \"doc_type\": \"CNIC\", \"side\": \"back\" },\n    { \"image_type\": \"back_side\" }  ]\n}"
            }
          }
        },
        {
          "name": "Review Motor - Reject",
          "request": {
            "method": "PATCH",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              },
              {
                "key": "Authorization",
                "value": "Bearer {{adminToken}}"
              }
            ],
            "url": "{{baseUrl}}/api/admin/proposals/motor/{{motorProposalId}}/review",
            "body": {
              "mode": "raw",
              "raw": "{\n  \"action\": \"reject\",\n  \"rejection_reason\": \"Vehicle details mismatch with documents.\"\n}"
            }
          }
        },
        {
          "name": "Review Travel - Approve",
          "request": {
            "method": "PATCH",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              },
              {
                "key": "Authorization",
                "value": "Bearer {{adminToken}}"
              }
            ],
            "url": "{{baseUrl}}/api/admin/proposals/travel/{{travelSubtype}}/{{travelProposalId}}/review",
            "body": {
              "mode": "raw",
              "raw": "{\n  \"action\": \"approve\"\n}"
            }
          }
        },
        {
          "name": "Review Travel - Reupload Required",
          "request": {
            "method": "PATCH",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              },
              {
                "key": "Authorization",
                "value": "Bearer {{adminToken}}"
              }
            ],
            "url": "{{baseUrl}}/api/admin/proposals/travel/{{travelSubtype}}/{{travelProposalId}}/review",
            "body": {
              "mode": "raw",
              "raw": "{\n  \"action\": \"reupload_required\",\n  \"reupload_notes\": \"Passport number missing. Upload passport scan again.\",\n  \"required_docs\": [\n    { \"doc_type\": \"PASSPORT\" }\n  ]\n}"
            }
          }
        },
        {
          "name": "Review Travel - Reject",
          "request": {
            "method": "PATCH",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              },
              {
                "key": "Authorization",
                "value": "Bearer {{adminToken}}"
              }
            ],
            "url": "{{baseUrl}}/api/admin/proposals/travel/{{travelSubtype}}/{{travelProposalId}}/review",
            "body": {
              "mode": "raw",
              "raw": "{\n  \"action\": \"reject\",\n  \"rejection_reason\": \"CNIC/Passport mismatch.\"\n}"
            }
          }
        }
      ]
    },
    {
      "name": "Admin - Policies",
      "item": [
        {
          "name": "Issue Policy (MOTOR) + Upload Schedule",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{adminToken}}",
                "type": "text"
              }
            ],
            "body": {
              "mode": "formdata",
              "formdata": [
                {
                  "key": "proposalType",
                  "value": "MOTOR",
                  "type": "text"
                },
                {
                  "key": "proposalId",
                  "value": "{{motorProposalId}}",
                  "type": "text"
                },
                {
                  "key": "policy_no",
                  "value": "SIC-MOT-2026-0001",
                  "type": "text"
                },
                {
                  "key": "policy_schedule",
                  "type": "file",
                  "src": ""
                }
              ]
            },
            "url": {
              "raw": "{{baseUrl}}/api/admin/policies/issue",
              "host": [
                "{{baseUrl}}"
              ],
              "path": [
                "api",
                "admin",
                "policies",
                "issue"
              ]
            }
          },
          "description": "Uploads policy schedule (PDF/JPG/PNG) and issues a Motor policy. Policy start date uses insurance_start_date from proposal and expires after 1 year. Admin manually enters policy_no."
        },
        {
          "name": "Issue Policy (TRAVEL) + Upload Schedule",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{adminToken}}",
                "type": "text"
              }
            ],
            "body": {
              "mode": "formdata",
              "formdata": [
                {
                  "key": "proposalType",
                  "value": "TRAVEL",
                  "type": "text"
                },
                {
                  "key": "proposalId",
                  "value": "{{travelProposalId}}",
                  "type": "text"
                },
                {
                  "key": "travelPackageCode",
                  "value": "{{travelPackageCode}}",
                  "type": "text"
                },
                {
                  "key": "policy_no",
                  "value": "SIC-TRV-INT-2026-0010",
                  "type": "text"
                },
                {
                  "key": "policy_schedule",
                  "type": "file",
                  "src": ""
                }
              ]
            },
            "url": {
              "raw": "{{baseUrl}}/api/admin/policies/issue",
              "host": [
                "{{baseUrl}}"
              ],
              "path": [
                "api",
                "admin",
                "policies",
                "issue"
              ]
            }
          },
          "description": "Uploads policy schedule (PDF/JPG/PNG) and issues a Travel policy. Policy tenure uses proposal start_date and end_date. travelPackageCode is required for TRAVEL (DOMESTIC / HAJJ_UMRAH_ZIARAT / INTERNATIONAL / STUDENT_GUARD). Admin manually enters policy_no."
        }
      ]
    },
    {
      "name": "Admin - Policy Renewal (Motor)",
      "item": [
        {
          "name": "Send Renewal Document (MOTOR) - Upload PDF/JPG/PNG",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{adminToken}}",
                "type": "text"
              }
            ],
            "body": {
              "mode": "formdata",
              "formdata": [
                {
                  "key": "renewal_notes",
                  "value": "Renewal document for expired motor policy",
                  "type": "text"
                },
                {
                  "key": "renewal_document",
                  "type": "file",
                  "src": ""
                }
              ]
            },
            "url": {
              "raw": "{{baseUrl}}/api/admin/policies/motor/{{motorProposalId}}/renewal",
              "host": [
                "{{baseUrl}}"
              ],
              "path": [
                "api",
                "admin",
                "policies",
                "motor",
                "{{motorProposalId}}",
                "renewal"
              ]
            }
          },
          "description": "Uploads renewal document (PDF/JPG/PNG) for an expired Motor policy. Allowed only if policy_status=expired OR policy_expires_at < CURDATE()."
        }
      ]
    },
    {
      "name": "Admin Refunds (Phase 3)",
      "item": [
        {
          "name": "Refunds Inbox (Initiated)",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{adminToken}}"
              }
            ],
            "url": "{{baseUrl}}/api/admin/refunds?status=refund_initiated&page=1&limit=20"
          },
          "description": "Finance view: list proposals with refund_status=refund_initiated (MOTOR + TRAVEL)."
        },
        {
          "name": "Refunds Inbox (Processed)",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{adminToken}}"
              }
            ],
            "url": "{{baseUrl}}/api/admin/refunds?status=refund_processed&page=1&limit=20"
          }
        },
        {
          "name": "Refunds Inbox (Closed)",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{adminToken}}"
              }
            ],
            "url": "{{baseUrl}}/api/admin/refunds?status=closed&page=1&limit=20"
          }
        },
        {
          "name": "Motor Refund Detail",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{adminToken}}"
              }
            ],
            "url": "{{baseUrl}}/api/admin/refunds/motor/{{motorProposalId}}"
          },
          "description": "Get motor proposal refund fields + refund_evidence_url."
        },
        {
          "name": "Travel Refund Detail",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{adminToken}}"
              }
            ],
            "url": "{{baseUrl}}/api/admin/refunds/travel/{{travelSubtype}}/{{travelProposalId}}"
          },
          "description": "Get travel proposal refund fields + refund_evidence_url."
        },
        {
          "name": "Motor Refund Update",
          "request": {
            "method": "PATCH",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              },
              {
                "key": "Authorization",
                "value": "Bearer {{adminToken}}"
              }
            ],
            "url": "{{baseUrl}}/api/admin/refunds/motor/{{motorProposalId}}",
            "body": {
              "mode": "raw",
              "raw": "{\n  \"refund_status\": \"refund_processed\",\n  \"refund_amount\": 1500,\n  \"refund_reference\": \"BANK-TRX-123\",\n  \"refund_remarks\": \"Refunded to customer account\"\n}"
            }
          },
          "description": "Allowed transitions: refund_initiated -> refund_processed -> closed."
        },
        {
          "name": "Travel Refund Update",
          "request": {
            "method": "PATCH",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              },
              {
                "key": "Authorization",
                "value": "Bearer {{adminToken}}"
              }
            ],
            "url": "{{baseUrl}}/api/admin/refunds/travel/{{travelSubtype}}/{{travelProposalId}}",
            "body": {
              "mode": "raw",
              "raw": "{\n  \"refund_status\": \"refund_processed\",\n  \"refund_amount\": 1500,\n  \"refund_reference\": \"BANK-TRX-123\",\n  \"refund_remarks\": \"Refunded to customer account\"\n}"
            }
          }
        },
        {
          "name": "Motor Refund Evidence Upload (multipart)",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{adminToken}}"
              }
            ],
            "url": "{{baseUrl}}/api/admin/refunds/motor/{{motorProposalId}}/evidence",
            "body": {
              "mode": "formdata",
              "formdata": [
                {
                  "key": "evidence",
                  "type": "file",
                  "src": "{{refundEvidenceFile}}"
                }
              ]
