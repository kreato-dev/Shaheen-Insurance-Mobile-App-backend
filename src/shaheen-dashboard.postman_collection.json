{
  "info": {
    "_postman_id": "7b2c2e5f-3b72-4c1e-8a62-2d3af2a9d3f3",
    "name": "Shaheen Insurance - Admin APIs (Phase 0-3)",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json",
    "description": "Admin Auth + Session + RBAC + Unified Proposals Inbox (Phase 1) + Proposal Details & Review Actions (Phase 2) + Refunds Workflow (Phase 3)"
  },
  "variable": [
    {
      "key": "baseUrl",
      "value": "http://localhost:4000"
    },
    {
      "key": "adminToken",
      "value": ""
    },
    {
      "key": "motorProposalId",
      "value": "1"
    },
    {
      "key": "travelSubtype",
      "value": "international"
    },
    {
      "key": "travelProposalId",
      "value": "1"
    },
    {
      "key": "refundEvidenceFile",
      "value": ""
    },
    {
      "key": "travelPackageCode",
      "value": "INTERNATIONAL"
    }
  ],
  "item": [
    {
      "name": "Admin Auth",
      "item": [
        {
          "name": "Login (Admin)",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "url": "{{baseUrl}}/api/admin/auth/login",
            "body": {
              "mode": "raw",
              "raw": "{\n  \"email\": \"admin@shaheen.com\",\n  \"password\": \"Admin@123\"\n}"
            }
          },
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "const res = pm.response.json();",
                  "if (res.accessToken) pm.collectionVariables.set('adminToken', res.accessToken);"
                ]
              }
            }
          ]
        },
        {
          "name": "Me (Admin)",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{adminToken}}"
              }
            ],
            "url": "{{baseUrl}}/api/admin/auth/me"
          }
        },
        {
          "name": "Change Password",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              },
              {
                "key": "Authorization",
                "value": "Bearer {{adminToken}}"
              }
            ],
            "url": "{{baseUrl}}/api/admin/auth/change-password",
            "body": {
              "mode": "raw",
              "raw": "{\n  \"oldPassword\": \"Admin@123\",\n  \"newPassword\": \"Admin@1234\"\n}"
            }
          }
        },
        {
          "name": "Logout",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{adminToken}}"
              }
            ],
            "url": "{{baseUrl}}/api/admin/auth/logout"
          }
        }
      ]
    },
    {
      "name": "Admin Proposals (Phase 1)",
      "item": [
        {
          "name": "Unified Inbox (Fast - No Count)",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{adminToken}}"
              }
            ],
            "url": "{{baseUrl}}/api/admin/proposals?page=1&limit=20&includeTotal=false"
          }
        },
        {
          "name": "Unified Inbox (With Count)",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{adminToken}}"
              }
            ],
            "url": "{{baseUrl}}/api/admin/proposals?page=1&limit=20&includeTotal=true"
          }
        },
        {
          "name": "Pending Review",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{adminToken}}"
              }
            ],
            "url": "{{baseUrl}}/api/admin/proposals?review_status=pending_review&page=1&limit=20"
          }
        },
        {
          "name": "Motor Only (Paid)",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{adminToken}}"
              }
            ],
            "url": "{{baseUrl}}/api/admin/proposals?type=MOTOR&payment_status=paid&page=1&limit=20"
          }
        },
        {
          "name": "Travel Only (Paid)",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{adminToken}}"
              }
            ],
            "url": "{{baseUrl}}/api/admin/proposals?type=TRAVEL&payment_status=paid&page=1&limit=20"
          }
        },
        {
          "name": "Search Proposals",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{adminToken}}"
              }
            ],
            "url": "{{baseUrl}}/api/admin/proposals?q=03001234567&page=1&limit=20"
          }
        },
        {
          "name": "Date Filter",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{adminToken}}"
              }
            ],
            "url": "{{baseUrl}}/api/admin/proposals?from=2025-12-01&to=2026-01-01&page=1&limit=20"
          }
        }
      ]
    },
    {
      "name": "Admin Proposals (Phase 2)",
      "item": [
        {
          "name": "Motor Detail (Docs + Images)",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{adminToken}}"
              }
            ],
            "url": "{{baseUrl}}/api/admin/proposals/motor/{{motorProposalId}}"
          },
          "description": "Returns motor proposal details with motor_documents and motor_vehicle_images, plus *_url fields."
        },
        {
          "name": "Travel Detail (by subtype)",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{adminToken}}"
              }
            ],
            "url": "{{baseUrl}}/api/admin/proposals/travel/{{travelSubtype}}/{{travelProposalId}}"
          },
          "description": "Returns travel proposal details with destinations and family members (where applicable), plus lifecycle/review fields."
        },
        {
          "name": "Review Motor - Approve",
          "request": {
            "method": "PATCH",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              },
              {
                "key": "Authorization",
                "value": "Bearer {{adminToken}}"
              }
            ],
            "url": "{{baseUrl}}/api/admin/proposals/motor/{{motorProposalId}}/review",
            "body": {
              "mode": "raw",
              "raw": "{\n  \"action\": \"approve\"\n}"
            }
          }
        },
        {
          "name": "Review Motor - Reupload Required",
          "request": {
            "method": "PATCH",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              },
              {
                "key": "Authorization",
                "value": "Bearer {{adminToken}}"
              }
            ],
            "url": "{{baseUrl}}/api/admin/proposals/motor/{{motorProposalId}}/review",
            "body": {
              "mode": "raw",
              "raw": "{\n  \"action\": \"reupload_required\",\n  \"reupload_notes\": \"CNIC images are blurry. Upload clear front/back.\",\n  \"required_docs\": [\n    { \"doc_type\": \"CNIC\", \"side\": \"front\" },\n    { \"doc_type\": \"CNIC\", \"side\": \"back\" }\n  ]\n}"
            }
          }
        },
        {
          "name": "Review Motor - Reject",
          "request": {
            "method": "PATCH",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              },
              {
                "key": "Authorization",
                "value": "Bearer {{adminToken}}"
              }
            ],
            "url": "{{baseUrl}}/api/admin/proposals/motor/{{motorProposalId}}/review",
            "body": {
              "mode": "raw",
              "raw": "{\n  \"action\": \"reject\",\n  \"rejection_reason\": \"Vehicle details mismatch with documents.\"\n}"
            }
          }
        },
        {
          "name": "Review Travel - Approve",
          "request": {
            "method": "PATCH",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              },
              {
                "key": "Authorization",
                "value": "Bearer {{adminToken}}"
              }
            ],
            "url": "{{baseUrl}}/api/admin/proposals/travel/{{travelSubtype}}/{{travelProposalId}}/review",
            "body": {
              "mode": "raw",
              "raw": "{\n  \"action\": \"approve\"\n}"
            }
          }
        },
        {
          "name": "Review Travel - Reupload Required",
          "request": {
            "method": "PATCH",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              },
              {
                "key": "Authorization",
                "value": "Bearer {{adminToken}}"
              }
            ],
            "url": "{{baseUrl}}/api/admin/proposals/travel/{{travelSubtype}}/{{travelProposalId}}/review",
            "body": {
              "mode": "raw",
              "raw": "{\n  \"action\": \"reupload_required\",\n  \"reupload_notes\": \"Passport number missing. Upload passport scan again.\",\n  \"required_docs\": [\n    { \"doc_type\": \"PASSPORT\" }\n  ]\n}"
            }
          }
        },
        {
          "name": "Review Travel - Reject",
          "request": {
            "method": "PATCH",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              },
              {
                "key": "Authorization",
                "value": "Bearer {{adminToken}}"
              }
            ],
            "url": "{{baseUrl}}/api/admin/proposals/travel/{{travelSubtype}}/{{travelProposalId}}/review",
            "body": {
              "mode": "raw",
              "raw": "{\n  \"action\": \"reject\",\n  \"rejection_reason\": \"CNIC/Passport mismatch.\"\n}"
            }
          }
        }
      ]
    },
    {
      "name": "Admin - Policies",
      "item": [
        {
          "name": "Issue Policy (MOTOR) + Upload 2 PDFs",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{adminToken}}",
                "type": "text"
              }
            ],
            "body": {
              "mode": "formdata",
              "formdata": [
                {
                  "key": "proposalType",
                  "value": "MOTOR",
                  "type": "text"
                },
                {
                  "key": "proposalId",
                  "value": "{{motorProposalId}}",
                  "type": "text"
                },
                {
                  "key": "policy_pdf",
                  "type": "file",
                  "src": ""
                },
                {
                  "key": "schedule_pdf",
                  "type": "file",
                  "src": ""
                }
              ]
            },
            "url": {
              "raw": "{{baseUrl}}/api/admin/policies/issue",
              "host": [
                "{{baseUrl}}"
              ],
              "path": [
                "api",
                "admin",
                "policies",
                "issue"
              ]
            }
          },
          "description": "Uploads 2 PDFs (policy_pdf + schedule_pdf) and issues a Motor policy. Motor duration expected to be fixed 1 year (as per your logic)."
        },
        {
          "name": "Issue Policy (TRAVEL) + Upload 2 PDFs",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{adminToken}}",
                "type": "text"
              }
            ],
            "body": {
              "mode": "formdata",
              "formdata": [
                {
                  "key": "proposalType",
                  "value": "TRAVEL",
                  "type": "text"
                },
                {
                  "key": "proposalId",
                  "value": "{{travelProposalId}}",
                  "type": "text"
                },
                {
                  "key": "travelPackageCode",
                  "value": "{{travelPackageCode}}",
                  "type": "text"
                },
                {
                  "key": "policy_pdf",
                  "type": "file",
                  "src": ""
                },
                {
                  "key": "schedule_pdf",
                  "type": "file",
                  "src": ""
                }
              ]
            },
            "url": {
              "raw": "{{baseUrl}}/api/admin/policies/issue",
              "host": [
                "{{baseUrl}}"
              ],
              "path": [
                "api",
                "admin",
                "policies",
                "issue"
              ]
            }
          },
          "description": "Uploads 2 PDFs (policy_pdf + schedule_pdf) and issues a Travel policy. travelPackageCode is required for TRAVEL (DOMESTIC / HAJJ_UMRAH_ZIARAT / INTERNATIONAL / STUDENT_GUARD)."
        }
      ]
    },
    {
      "name": "Admin Refunds (Phase 3)",
      "item": [
        {
          "name": "Refunds Inbox (Initiated)",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{adminToken}}"
              }
            ],
            "url": "{{baseUrl}}/api/admin/refunds?status=refund_initiated&page=1&limit=20"
          },
          "description": "Finance view: list proposals with refund_status=refund_initiated (MOTOR + TRAVEL)."
        },
        {
          "name": "Refunds Inbox (Processed)",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{adminToken}}"
              }
            ],
            "url": "{{baseUrl}}/api/admin/refunds?status=refund_processed&page=1&limit=20"
          }
        },
        {
          "name": "Refunds Inbox (Closed)",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{adminToken}}"
              }
            ],
            "url": "{{baseUrl}}/api/admin/refunds?status=closed&page=1&limit=20"
          }
        },
        {
          "name": "Motor Refund Detail",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{adminToken}}"
              }
            ],
            "url": "{{baseUrl}}/api/admin/refunds/motor/{{motorProposalId}}"
          },
          "description": "Get motor proposal refund fields + refund_evidence_url."
        },
        {
          "name": "Travel Refund Detail",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{adminToken}}"
              }
            ],
            "url": "{{baseUrl}}/api/admin/refunds/travel/{{travelSubtype}}/{{travelProposalId}}"
          },
          "description": "Get travel proposal refund fields + refund_evidence_url."
        },
        {
          "name": "Motor Refund Update",
          "request": {
            "method": "PATCH",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              },
              {
                "key": "Authorization",
                "value": "Bearer {{adminToken}}"
              }
            ],
            "url": "{{baseUrl}}/api/admin/refunds/motor/{{motorProposalId}}",
            "body": {
              "mode": "raw",
              "raw": "{\n  \"refund_status\": \"refund_processed\",\n  \"refund_amount\": 1500,\n  \"refund_reference\": \"BANK-TRX-123\",\n  \"refund_remarks\": \"Refunded to customer account\"\n}"
            }
          },
          "description": "Allowed transitions: refund_initiated -> refund_processed -> closed."
        },
        {
          "name": "Travel Refund Update",
          "request": {
            "method": "PATCH",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              },
              {
                "key": "Authorization",
                "value": "Bearer {{adminToken}}"
              }
            ],
            "url": "{{baseUrl}}/api/admin/refunds/travel/{{travelSubtype}}/{{travelProposalId}}",
            "body": {
              "mode": "raw",
              "raw": "{\n  \"refund_status\": \"refund_processed\",\n  \"refund_amount\": 1500,\n  \"refund_reference\": \"BANK-TRX-123\",\n  \"refund_remarks\": \"Refunded to customer account\"\n}"
            }
          }
        },
        {
          "name": "Motor Refund Evidence Upload (multipart)",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{adminToken}}"
              }
            ],
            "url": "{{baseUrl}}/api/admin/refunds/motor/{{motorProposalId}}/evidence",
            "body": {
              "mode": "formdata",
              "formdata": [
                {
                  "key": "evidence",
                  "type": "file",
                  "src": "{{refundEvidenceFile}}"
                }
              ]
            }
          },
          "description": "Upload refund evidence file. Field name: evidence. Set collection var refundEvidenceFile to an absolute path on your machine."
        },
        {
          "name": "Travel Refund Evidence Upload (multipart)",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{adminToken}}"
              }
            ],
            "url": "{{baseUrl}}/api/admin/refunds/travel/{{travelSubtype}}/{{travelProposalId}}/evidence",
            "body": {
              "mode": "formdata",
              "formdata": [
                {
                  "key": "evidence",
                  "type": "file",
                  "src": "{{refundEvidenceFile}}"
                }
              ]
            }
          },
          "description": "Upload refund evidence file. Field name: evidence. Set collection var refundEvidenceFile to an absolute path on your machine."
        }
      ]
    },
    {
      "name": "Admin User Management (Phase 4A)",
      "item": [
        {
          "name": "List Users",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{adminToken}}"
              }
            ],
            "url": "{{baseUrl}}/api/admin/users?page=1&limit=20"
          },
          "description": "Read-only paginated user list. Accessible by SUPPORT_ADMIN / OPERATIONS_ADMIN."
        },
        {
          "name": "Get User Detail",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{adminToken}}"
              }
            ],
            "url": "{{baseUrl}}/api/admin/users/1"
          },
          "description": "Returns full user profile (no password fields)."
        },
        {
          "name": "List All Proposals of User by User ID",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{adminToken}}"
              }
            ],
            "url": "{{baseUrl}}/api/admin/users/user-proposal-list/?page=1&limit=20"
          },
          "description": "Returns all Proposals of User by User ID"
        },
        {
          "name": "Trigger Password Reset (Send OTP)",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              },
              {
                "key": "Authorization",
                "value": "Bearer {{adminToken}}"
              }
            ],
            "url": "{{baseUrl}}/api/admin/users/1/password-reset/initiate",
            "body": {
              "mode": "raw",
              "raw": "{\n  \"reason\": \"User requested password reset via support\"\n}"
            }
          },
          "description": "Triggers OTP email using existing otp.service.js + mailer.js"
        }
      ]
    }
  ]
}